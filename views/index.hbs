<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1>User Management System</h1>
        
        <div class="success-message" id="successMessage"></div>
        <div class="error-message" id="errorMessage"></div>
        
        <div class="form-section">
            <h2>Add New User</h2>
            <form id="userForm">
                <div class="form-group">
                    <input type="text" id="name" placeholder="Full Name" required>
                    <input type="email" id="email" placeholder="Email Address" required>
                    <button type="submit">Add User</button>
                </div>
            </form>
        </div>

        <h2 style="color: #333; margin-bottom: 15px;">Users List</h2>
        <table id="usersTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                {{#if users.length}}
                    {{#each users}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{name}}</td>
                        <td>{{email}}</td>
                        <td>
                            <div class="actions">
                                <button class="update-btn" data-id="{{id}}" data-name="{{name}}" data-email="{{email}}">Edit</button>
                                <button class="delete-btn" onclick="deleteUser('{{id}}')" data-id="{{id}}">Delete</button>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                {{else}}
                    <tr class="no-users">
                        <td colspan="4">No users found</td>
                    </tr>
                {{/if}}
            </tbody>
        </table>
    </div>

    <script>
        const API_URL = '/users';

        document.addEventListener('click', (e) => {
            if (e.target.classList.contains('update-btn')) {
                const button = e.target;
                const id = button.dataset.id;
                const name = button.dataset.name;
                const email = button.dataset.email;
                editUser(id, name, email);
            }
        });

        window.deleteUser = async (id) => {
            if (!confirm('Are you sure you want to delete this user?')) return;
            try {
                const response = await fetch(`${API_URL}/${id}`, {method: 'DELETE'});
                if (response.ok) {
                    showSuccess('User deleted successfully!');
                    loadUsers();
                } else {
                    showError('Failed to delete user');
                }
            } catch (error) {
                showError('Error deleting user');
                console.error('Error:', error);
            }
        };

        const editUser = (id, currentName, currentEmail) => {
            const newName = prompt('Enter new name:', currentName);
            if (newName === null) return;
            const newEmail = prompt('Enter new email:', currentEmail);
            if (newEmail === null) return;
            updateUser(id, newName, newEmail);
        };

        const updateUser = async (id, name, email) => {
            try {
                const response = await fetch(`${API_URL}/${id}`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, email })
                });
                if (response.ok) {
                    showSuccess('User updated successfully!');
                    loadUsers();
                } else {
                    showError('Failed to update user');
                }
            } catch (error) {
                showError('Error updating user');
                console.error('Error:', error);
            }
        };

        document.getElementById('userForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const name = document.getElementById('name').value.trim();
            const email = document.getElementById('email').value.trim();
            if (!name || !email) {
                showError('Please fill in all fields');
                return;
            }
            try {
                const response = await fetch(API_URL, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, email })
                });
                if (response.ok) {
                    document.getElementById('userForm').reset();
                    showSuccess('User added successfully!');
                    loadUsers();
                } else {
                    showError('Failed to add user');
                }
            } catch (error) {
                showError('Error adding user');
                console.error('Error:', error);
            }
        });

        const loadUsers = async () => {
            try {
                const response = await fetch(API_URL);
                const users = await response.json();
                const tableBody = document.getElementById('tableBody');
                if (!Array.isArray(users) || users.length === 0) {
                    tableBody.innerHTML = '<tr class="no-users"><td colspan="4">No users found</td></tr>';
                    return;
                }
                tableBody.innerHTML = users.map(user => `
                    <tr>
                        <td>${user.id}</td>
                        <td>${user.name}</td>
                        <td>${user.email}</td>
                        <td>
                            <div class="actions">
                                <button class="update-btn" data-id="${user.id}" data-name="${user.name}" data-email="${user.email}">Edit</button>
                                <button class="delete-btn" onclick="deleteUser('${user.id}')" data-id="${user.id}">Delete</button>
                            </div>
                        </td>
                    </tr>
                `).join('');
            } catch (error) {
                showError('Failed to load users');
                console.error('Error loading users:', error);
            }
        };

        const showSuccess = (message) => {
            const msgEl = document.getElementById('successMessage');
            msgEl.textContent = message;
            msgEl.classList.add('show');
            setTimeout(() => msgEl.classList.remove('show'), 3000);
        };

        const showError = (message) => {
            const msgEl = document.getElementById('errorMessage');
            msgEl.textContent = message;
            msgEl.classList.add('show');
            setTimeout(() => msgEl.classList.remove('show'), 3000);
        };
    </script>
</body>
</html>